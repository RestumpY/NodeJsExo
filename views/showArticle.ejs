<%- include ('./layouts/header') %>

<body>
    <h1>Voici l'article <b><%= article.title %></b> </h1>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Auteur</th>
        </tr>
</thead><tbody>
        <tr>
            <td><%= article.id %></td>
            <td><%= article.title %> </td>
            <td><%= article.description %></td>
            <% if (article.user != undefined) { %>
            <td><%= article.user.firstname %> <%= article.user.lastname %></td>
            <td><a href="/user/show/<%=article.user.id%>"><i class="fa-solid fa-eye"></i></a></td>
            <% }else{ %>
            <td>Aucun utilisateur</td>
            <% } %>
        </tr>
    </tbody>
</body>
<%- include ('./layouts/footer') %>